# ============================================================================
# Supabase
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================================================
# Stripe
# ============================================================================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_...

# ============================================================================
# Matrx AI Backend
# ============================================================================
MATRX_AI_BACKEND_URL=https://api.matrx.ai
MATRX_AI_API_KEY=your-api-key

# ============================================================================
# Webhooks
# ============================================================================
GITHUB_WEBHOOK_SECRET=your-github-webhook-secret
VERCEL_WEBHOOK_SECRET=your-vercel-webhook-secret

# ============================================================================
# Vercel API (for deployment sync â€” vercel:sync command)
# ============================================================================
VERCEL_ACCESS_TOKEN=your-vercel-access-token
VERCEL_PROJECT_ID=your-vercel-project-id
VERCEL_TEAM_ID=your-vercel-team-id

# ============================================================================
# App
# ============================================================================
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================================================
# Deployment System
# ============================================================================
# Which app is being deployed (used by version scripts and API routes)
DEPLOY_APP_NAME=web
# Target environment (development, staging, production)
DEPLOY_ENV=production

# ============================================================================
# Feature Flags
#
# Set to "true" to enable, "false" or remove to disable.
# Features with Supabase dependencies require SUPABASE_URL and ANON_KEY.
# See packages/shared/src/constants/features.ts for defaults.
# ============================================================================
NEXT_PUBLIC_FEATURE_AUTH=true
NEXT_PUBLIC_FEATURE_ADMIN_PORTAL=true
NEXT_PUBLIC_FEATURE_BLOG=true
NEXT_PUBLIC_FEATURE_DYNAMIC_PAGES=true
NEXT_PUBLIC_FEATURE_FILE_STORAGE=true
NEXT_PUBLIC_FEATURE_STRIPE=false
NEXT_PUBLIC_FEATURE_AI_INTEGRATION=false
NEXT_PUBLIC_FEATURE_REALTIME=false
NEXT_PUBLIC_FEATURE_VERSION_TRACKING=true
NEXT_PUBLIC_FEATURE_GITHUB_WEBHOOK=false
NEXT_PUBLIC_FEATURE_VERCEL_WEBHOOK=false
NEXT_PUBLIC_FEATURE_ERROR_TRACKING=true
NEXT_PUBLIC_FEATURE_AUDIT_LOG=true
